.blog-card
    padding 20px
    background #eeeeee
    height: 100%
    margin: 20px
    position relative
    .blog-title
        font-weight: lighter
        font-size: 3em
        .date
            display: block
            font-size: .50em
            font-style: italic
    .blog-btn-wrap
        display: flex
        width: 50%
        .blog-btn
            flex-basis: 40%
            background: blue
            color: #ffffff
            text-decoration: none
            padding 10px
            margin: 10px
            display: flex
            justify-content center
            align-items center
            border-radius: 5px
            transition .5s ease-in
            &:hover
                background: green 
                transition .5s ease-in
        .btn-back
            position: relative
            right: 0
        .btn-edit
            margin-right: auto
        .btn-delete
            margin-right: auto
        .btn-position
            position: absolute
            top: 0
            right: 0

.window 
    position: fixed
    top 0%
    bottom: 0%
    left 0% 
    right 0%
    background #DDD
    box-shadow: 0 0 0 1050px rgba(0,0,0,.5);
    width 1000px
    height 500px
    margin auto 
    display block
    padding: 20px
    display flex
    flex-wrap: wrap
    z-index: 1
    animation fadeIn .5s
    .window-btn-wrap
        margin-right auto
        flex-basis: 100%
        .window-close
            display: block
            width: 20px   
            margin-left: auto
            img 
                width 100%
            &:hover
                cursor pointer
    .window-contents
        flex-basis 100%
        h1 
            font-size 4.5em
            font-weight: lighter
    .options-btn-wrap
        flex-basis: 100%
        display: flex
        flex-wrap: wrap
        justify-content: center
        button 
            flex-basis: 40%
            margin 10px
            border none 
            background blue
            padding 10px
            color #FFF
            height: 50px
            &:hover
                cursor: pointer
                background green
                opacity .5;
                transition .5s ease-in

@keyframes fadeIn 
    0%
        opacity .5
    100%
        opacity 1