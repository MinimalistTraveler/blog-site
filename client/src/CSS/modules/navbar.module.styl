@import "../helperstyles/variables.styl"
.menu
    background navbarColor !important
    color #FFF
    box-shadow 1px 2px 2px rgba(#000, .3)
    .navbar-light .navbar-nav .nav-link
            color #FFF !important
            transition color .2s
            &:hover
                color #CCC !important
                transition color .2s
            &:focus
                color #CCC !important
                transition color .2s
#toggler
    border: none
    width: 45px
    span 
        display: none
.hidden
    display none !important
.menu-icon
    position relative
    &:after
        content: ""
        position: absolute
        top: 0
        width: 50px
        height: 50px
        background: #000
        padding: 20px
        border-radius: 50%
        display: block

@media (min-width: 768px) 
    .navbar-brand
        position absolute
        left 50%
        transform translateX(-50%)
    
