@import "./CSS/helperstyles/variables.styl"
#form-main
    background: #EEE
    margin-top: 60px
    padding: 30px
.btn-wrap
    display: flex
    justify-content: space-between
    button 
        flex-basis: 50%
        display: flex
        justify-content: center
        align-items: center
    
        &:first-child
            margin: 10px
    a 
        flex-basis: 50%
        margin: 10px

.form-control
    font-size 14px !important
    &:focus
        box-shadow: 0 0 0 0 transparent !important;
label 
    text-align: left
    padding-right 100%